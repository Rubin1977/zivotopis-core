@model ZivotopisCore.Models.DiagnozaModel

@{
    ViewData["Title"] = "Pridať diagnózu";
}

<h2>Pridať diagnózu</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Kod"></label>
        <input asp-for="Kod" class="form-control" />
        <span asp-validation-for="Kod" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Nazov"></label>
        <input asp-for="Nazov" class="form-control" />
        <span asp-validation-for="Nazov" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Popis"></label>
        <textarea asp-for="Popis" class="form-control"></textarea>
        <span asp-validation-for="Popis" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Typ"></label>
        <input asp-for="Typ" class="form-control" />
        <span asp-validation-for="Typ" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="Aktivna" class="form-check-input" type="checkbox" />
        <label asp-for="Aktivna" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-primary">Uložiť diagnózu</button>
    <a asp-action="Index" class="btn btn-secondary ml-2">Späť na zoznam</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
