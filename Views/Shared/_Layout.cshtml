<!DOCTYPE html>
<html lang="sk">
<head>
    <meta charset="utf-8" />
    <title>Životopis Rastislav Ružbacký</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <!-- Select2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

    <!-- Vlastné štýly -->
    <link rel="stylesheet" href="~/css/site.css" />

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/Images/Rastik.jpg" />
</head>


<body>
    <!-- Navigácia -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
        <div class="container">
            <!-- Logo -->
            <a class="navbar-brand" href="@Url.Content("~/")">
                <img src="~/Images/RastiRuzbacky.jpg" alt="Profilová fotka Rastislav Ružbacký" style="height:40px; border-radius:5px;" />
            </a>

            <!-- Hamburger tlačidlo -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navigačné odkazy -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item @( (ViewContext.RouteData.Values["action"] as string) == "Uvod" ? "active" : "")">
                        <a class="nav-link" href="@Url.Action("Uvod", "Home")"><i class="fas fa-home"></i> Úvod</a>
                    </li>
                    <li class="nav-item @( (ViewContext.RouteData.Values["action"] as string) == "OsobneUdaje" ? "active" : "")">
                        <a class="nav-link" href="@Url.Action("OsobneUdaje", "Home")"><i class="fas fa-id-card"></i> Osobné údaje</a>
                    </li>
                    <li class="nav-item @( (ViewContext.RouteData.Values["action"] as string) == "Vzdelanie" ? "active" : "")">
                        <a class="nav-link" href="@Url.Action("Vzdelanie", "Home")"><i class="fas fa-graduation-cap"></i> Vzdelanie</a>
                    </li>
                    <li class="nav-item @( (ViewContext.RouteData.Values["action"] as string) == "Kontakt" ? "active" : "")">
                        <a class="nav-link" href="@Url.Action("Kontakt", "Home")"><i class="fas fa-envelope"></i> Kontakt</a>
                    </li>
                    <li class="nav-item @( (ViewContext.RouteData.Values["controller"] as string) == "Pacient" ? "active" : "")">
                        <a class="nav-link" href="@Url.Action("Index", "Pacient")"><i class="fas fa-user-md"></i> Pacienti</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>



    <!-- Obsah -->
    <div class="container">
        <div class="page-body">
            @RenderBody()
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="container text-center">
            <div class="row">
                <div class="col-12">
                    <p>&copy; @DateTime.Now.Year Rastislav Ružbacký</p>
                </div>
                <div class="col-12">
                    <a href="mailto:ruzbacky@yahoo.com">ruzbacky@yahoo.com</a>
                    <span class="mx-2">|</span>
                    <a href="tel:+421948900850">+421 948 900 850</a>
                </div>
                <div class="col-12">
                    <div class="social-icons">
                        <a class="social-link" href="https://www.facebook.com/profile.php?id=100009882270245" target="_blank" aria-label="Facebook">
                            <img src="~/Images/FB_icon.png" alt="Facebook" />
                        </a>
                        <a class="social-link mx-2" href="https://www.instagram.com/rastorubin/" target="_blank" aria-label="Instagram">
                            <img src="~/Images/Insta_icon.png" alt="Instagram" />
                        </a>
                        <a class="social-link" href="https://www.linkedin.com/in/rastislav-ruzbacky-99a8a645/" target="_blank" aria-label="LinkedIn">
                            <img src="~/Images/Linkedin.png" alt="LinkedIn" />
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>

    <!-- Select2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    @RenderSection("Scripts", required: false)
    @await Html.PartialAsync("_Alert")

</body>
</html>
